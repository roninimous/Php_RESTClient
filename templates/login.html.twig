{% extends 'base.html.twig' %}

{% block title %}
   Login
   {% endblock %}
   
   {% block heading %}Login
   {% endblock %}
   
   
   {% block body %}

    
<br><br><br><br><br><br>
    

        <div class="container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6 box-black text-center form-title-font-color">
                    Login
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6 jumbotron">
                    <form action="?action=logIn" method="post" novalidate="true" enctype="multipart/form-data">
                        
                        
                        
                   
                    <div class="form-group">
                        <label for="email">Email:
                        <small class="text-danger"/>
                               {% if errors.email is defined %}
                            {{ errors.email }}
                        {% endif %}
                    </small>
                        </label>
                        <input type="text" value="{{ email }}" class="form-control" placeholder="Enter email" name="email">
                    </div>
                    
                    <div class="form-group">
                        <label for="password">Password:
                        <small class="text-danger"/>
                               {% if errors.password is defined %}
                            {{ errors.password }}
                        {% endif %}
                    </small>
                        </label>
                        <input type="password" value="{{ password }}" class="form-control" placeholder="Enter password" name="password">
                    </div>
                    
                    
                        
                      
                        
                        
                        
                        <button type="submit" class="btn btn-block btn-primary" name="submit">Submit</button>
                    </form>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
<br><br><br><br><br><br>



   

       
       
       
         {% endblock %}

